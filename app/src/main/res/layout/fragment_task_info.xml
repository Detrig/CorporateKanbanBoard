<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/taskTitle"
            android:layout_width="0dp"
            style="@style/BoldTextViewStyle"
            android:layout_height="wrap_content"
            tools:text="Заголовок задачи"
            android:textStyle="bold"
            android:textSize="28sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Описание -->
        <TextView
            android:id="@+id/taskDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/taskTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Автор -->
        <TextView
            android:id="@+id/taskCreator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Создатель: "
            style="@style/NormalTextViewStyle"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/taskDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Дата создания -->
        <TextView
            android:id="@+id/taskDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Дата создания: "
            style="@style/NormalTextViewStyle"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/taskCreator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Статус -->
        <TextView
            android:id="@+id/taskProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Статус: "
            style="@style/NormalTextViewStyle"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/taskDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Приоритет -->
        <TextView
            android:id="@+id/taskPriority"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Приоритет: "
            style="@style/NormalTextViewStyle"
            android:textSize="22sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/taskProgress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Фото метка -->
        <TextView
            android:id="@+id/photosLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Фото:"
            style="@style/NormalTextViewStyle"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/taskPriority"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Фото (горизонтальный контейнер) -->
        <LinearLayout
            android:id="@+id/photoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/photosLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Комментарии метка -->
        <TextView
            android:id="@+id/commentsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Комментарии:"
            android:textStyle="bold"
            style="@style/NormalTextViewStyle"
            android:textSize="22sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/photoContainer"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commentsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/commentsLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Поле ввода комментария -->
        <EditText
            android:id="@+id/commentEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Введите комментарий"
            android:fontFamily="@font/onest_medium"
            android:padding="12dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/commentsRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sendCommentButton"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginEnd="8dp"/>

        <!-- Кнопка отправки -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sendCommentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отправить"
            android:fontFamily="@font/onest_medium"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="@id/commentEditText"
            app:layout_constraintBottom_toBottomOf="@id/commentEditText"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Нижний отступ, чтобы прокручивалось до конца -->
        <View
            android:layout_width="0dp"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@id/commentEditText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
