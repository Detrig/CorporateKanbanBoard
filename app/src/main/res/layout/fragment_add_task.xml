<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:clickable="true"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Заголовок -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Название задачи"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/titleEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="textCapSentences" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Описание -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Описание"
            app:counterEnabled="true"
            app:counterMaxLength="500">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/descriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="5" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Приоритет -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Приоритет"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

        <RadioGroup
            android:id="@+id/priorityRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/lowPriorityRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_weight="1"
                android:text="Низкий" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/mediumPriorityRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Средний" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/highPriorityRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Высокий" />
        </RadioGroup>

<!--        &lt;!&ndash; Статус &ndash;&gt;-->
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="16dp"-->
<!--            android:text="Статус"-->
<!--            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />-->

<!--        <Spinner-->
<!--            android:id="@+id/statusSpinner"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="8dp" />-->

        <!-- Добавление фото -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Фотографии"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/photosContainer"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <!-- Preview добавленных фото будет здесь -->

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addPhotoButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textColor="@color/black"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:iconTint="@null"
                    android:layout_marginEnd="8dp"
                    android:text="+ Фото"
                    app:icon="@drawable/ic_add_photo"
                    app:iconGravity="textTop" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancelButton"
                android:backgroundTint="@color/light_gray"
                android:fontFamily="@font/onest_medium"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Отмена" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/saveButton"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Сохранить" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>