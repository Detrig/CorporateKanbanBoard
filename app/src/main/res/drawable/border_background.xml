<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#000000"/> <!-- Внешняя чёрная рамка -->
        </shape>
    </item>

    <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
        <shape>
            <solid android:color="#CCCCCC"/> <!-- Внутренняя серая рамка -->
        </shape>
    </item>

    <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
        <shape>
            <solid android:color="@android:color/white"/> <!-- Контент внутри -->
        </shape>
    </item>
</layer-list>